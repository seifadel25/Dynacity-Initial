@model IEnumerable<DynacityFront.DTO.UserDTO>
<br />
<div class="container p-4 border">
 <div class="row pb-2">
     <h1 class="text-primary">User List</h1>
     <div class="col text-end pt-1">
         <a class="btn btn-outline-primary" asp-action="Create">Create new User</a>
     </div>
 </div>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                </td>                <td>
                        @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                        @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>

                <td>
                    <a asp-action="Update" asp-route-Userid="@item.UserID">Edit</a> |
                    <a asp-action="Details" asp-route-Userid="@item.UserID">Details</a> |
                    <a asp-action="Delete" asp-route-Userid="@item.UserID">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>
</div>
