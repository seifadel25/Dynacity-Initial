@model DynacityFront.DTO.Register_Request
<div style="margin:auto">

    <section class="h-100 bg-dark">
        <div class="container py-5 h-100" >
            <div class="row d-flex justify-content-center align-items-center h-100" style="margin-top:5%">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="/images/hero_bg_3.jpg"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:100%"  />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">Registration form</h3>
                                    <form enctype="multipart/form-data" method="post">
                                        <div class="row text-center">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                        </div>
                                    <div class="row">                                                                                                         
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                    <input class="form-control form-control-lg" asp-for="Name" type="text" placeholder="Username...." />
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                    <input class="form-control form-control-lg" asp-for="Email" type="text" placeholder="Email...." />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                    <input class="form-control form-control-lg" asp-for="Password" type="text" placeholder="Password...." />
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                    <input class="form-control form-control-lg" asp-for="First_Name" type="text" placeholder="First Name...." />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="Last_Name" type="text" placeholder="Last Name...." />
                                    </div>
                                    <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="PhoneNumber" type="text" placeholder="Phone Number...." />
                                    </div>
                                    <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="NationalId" type="text" placeholder="National ID...." />
                                        </div>
                                        <div class="form-outline mb-4">
                                                <label for="formFileMultiple" class="form-label">User Image</label>
                                            <input class="form-control" accept="image/*" id="formFileMultiple" asp-for="UserImage"  placeholder="Image...." />

                                        </div>
                                        <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="City" type="text" placeholder="City...." />
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="Country" type="text" placeholder="Country...." />
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input class="form-control form-control-lg" asp-for="StreetAddress" type="text" placeholder="Street Address...." />
                                        </div>

                                    

                         



                                    <div class="d-flex justify-content-end pt-3">

                                            <button type="button" class="btn btn-light btn-lg"><a asp-action="Index" asp-controller="Home">Cancel</a></button>
                                            <button type="submit" class="btn btn-warning btn-lg ms-2" style="color:white!important ;background-color:#005555!important" value="Submit">Register</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>

