@model DynacityFront.DTO.Login_Request
<div style="background-image:url('/images/signup copy.png')!important; background-size:contain;margin-top:0!important;"> 

<section class=" vh-100 gradient-custom">
    <div class="container py-5 h-75 " >
        <div class="row d-flex justify-content-center align-items-center h-75 ">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-top:7%!important">
                    <div class="card bg-dark text-white shadow-5" style="border-radius: 1rem;opacity:90%!important">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-2">

                            <h2 class="fw-bold mb-2 text-uppercase text-white">Login</h2>
                            <p class="text-white-50 mb-2">Please enter your Email and Password!</p>
                            <form method="post">
                            <div class="row text-center">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="form-outline form-white mb-2">
@*                                <label class="form-label" for="typeEmailX">Email</label>
*@                                <input asp-for="Email" type="email" placeholder="Email...."  class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline form-white mb-2">
@*                                <label class="form-label" for="typePasswordX">Password</label>
*@                                <input asp-for="Password" type="password" placeholder="Password...." class="form-control form-control-lg" />
                            </div>

                            <p class="small mb-2 pb-lg-2"><a asp-action="ForgetPass" asp-controller="Auth" class="text-white-50" >Forgot password?</a></p>

                            <button class="btn btn-outline-light btn-lg px-4" type="submit" value="Submit">Login</button>
                                <div>
                                    <p class="mb-0">
                                        Don't have an account? <a asp-controller="Auth" asp-action="Register" class="text-white-50 fw-bold">Sign Up</a>
                                    </p>
                                </div>

                            </form>

                        </div>

                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}